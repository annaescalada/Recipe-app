<form action="/recipes/create" method="POST">
  <label for="title">Title</label>
  <input type="text" name="title" id="title" required placeholder="tiramisu">
 
  <label for="duration">Duration</label>
  <input type="number" name="duration" id="duration" placeholder="60">
 
  <label for="level"></label>
  <select name="level" id="level">
    <option value="" disabled selected>--Select one of this levels</option>
    <option value="Easy Peasy">Basic</option>
    <option value="Amateur Chef">Medium</option>
    <option value="UltraPro Chef">Hard</option>
  </select>
 
  <label for="cuisine">Cuisine</label>
  <input type="text" name="cuisine" id="cuisine" required placeholder="french">
 
  <label for="date">Created date</label>
  <input type="date" name="created" id="date">

  <button type="submit">Add recipe</button>
</form>

