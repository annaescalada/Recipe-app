<form action="/recipes/details/{{_id}}/edit" method="POST">
  <label for="title">Title</label>
  <input type="text" name="title" id="title" required value="{{title}}">
 
  <label for="duration">Duration</label>
  <input type="number" name="duration" id="duration" value="{{duration}}">
 
  <label for="level"></label>
  <select name="level" id="level">
    <option value="{{level}}" selected>{{level}}</option>
    <option value="Easy Peasy">Basic</option>
    <option value="Amateur Chef">Medium</option>
    <option value="UltraPro Chef">Hard</option>
  </select>
 
  <label for="cuisine">Cuisine</label>
  <input type="text" name="cuisine" id="cuisine" required value="cuisine">
 
  <label for="date">Created date</label>
  <input type="date" name="created" id="date">

  <button type="submit">Update recipe</button>
</form>
